{
  "manifest_version": 3,
  "name": "Credible: Agentic Fact-Checker",
  "version": "1.1.0",
  "description": "Spot misinformation instantly. Credible uses AI to verify search results and articles in real-time.",
  "homepage_url": "https://credible-website.vercel.app/",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/*",
        "*://*.bing.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "permissions": ["activeTab", "contextMenus", "scripting"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Credible",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "host_permissions": [
    "*://*.google.com/*",
    "*://*.bing.com/*",
    "http://localhost:8000/*",
    "https://credible-factchecker.onrender.com/*"
  ]
}