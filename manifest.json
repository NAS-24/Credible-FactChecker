{
  "manifest_version": 3,
  "name": "Credible: Agentic Fact-Checker",
  "version": "1.0.0",
  "description": "Provides real-time credibility signals on search results using Agentic verification logic.",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/*",
        "*://*.bing.com/*" 
      ], 
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],

  "permissions": ["activeTab", "contextMenus"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Credible: Full Scan",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "host_permissions": [
    "http://localhost:8000/*", 
    "https://credible-factchecker.onrender.com/*",
    "http://*/*",
    "https://*/*"
  ]
}