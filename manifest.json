{
  "manifest_version": 3,
  "name": "Credible",
  "version": "1.0",
  "description": "Provides real-time credibility signals on search results.",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/search?*",
        "*://*.bing.com/search?*",
        "*://*.duckduckgo.com/?*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],

  "permissions": ["activeTab"],

  "host_permissions": [
    "https://www.google.com/*",
    "https://*.google.com/*",
    "http://*/*",
    "https://*/*"
  ]
}
