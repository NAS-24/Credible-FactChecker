{
  "manifest_version": 3,
  "name": "Credible: Agentic Fact-Checker",
  "version": "1.0.0",
  "description": "Provides real-time credibility signals on search results using Agentic verification logic.",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/search?*",
        "*://*.bing.com/search?*",
        "*://*.duckduckgo.com/?*"
      ],
      "js": ["content.js"]
      
    }
  ],

  "permissions": ["activeTab", "contextMenus"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png",
    "default_title": "Credible: Full Scan"
  },

  "host_permissions": [
    "https://www.google.com/*",
    "https://*.google.com/*",
    "https://credible-factchecker.onrender.com/*"
  ]
}